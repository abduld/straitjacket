  set rlimit fsize <= 32M,
  set rlimit nproc <= 500,

# 1 greater than max
  set rlimit nofile <= 501,

  /usr/bin/as rix,
  /usr/bin/cc rix,
  /usr/bin/gcc* rix,
  /etc/alternatives/cc rix,
  /usr/bin/ld.bfd rix,
  /usr/lib/**/cc1 rix,
  /usr/lib/**/cc1plus rix,
  /usr/lib/**/collect2 rix,
  /usr/lib/gcc/** rix,
  /proc/meminfo r,
  /usr/include/** r,
